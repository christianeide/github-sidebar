{
  "name": "github-sidebar",
  "version": "2.2.3",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianeide/github-sidebar"
  },
  "author": "Christian Sletten Eide",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack",
    "version": "node ./version.js",
    "build": "NODE_ENV=production webpack -p --config webpack.production.config.js --display-error-details --colors --progress",
    "lint": "eslint . --fix --ext .jsx,.js --ignore-path .gitignore"
  },
  "dependencies": {
    "array-move": "^2.2.1",
    "favico.js": "^0.3.10",
    "preact": "^10.3.4",
    "react-sortable-hoc": "^1.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.10.0",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "sass-loader": "^8.0.2",
    "semver": "^7.1.3",
    "standard": "^14.3.3",
    "style-loader": "^1.1.3",
    "stylelint": "^13.3.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "webpack": "^4.42.1",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{scss,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 2
  }
}
