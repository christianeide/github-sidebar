{
  "name": "github-sidebar",
  "version": "4.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianeide/github-sidebar"
  },
  "author": "Christian Gogstad Eide",
  "license": "MIT",
  "scripts": {
    "dev": "(BUILD_TARGET=content vite build --mode development --watch & BUILD_TARGET=background vite build --mode development --watch & wait)",
    "version": "node ./version.js",
    "build": "BUILD_TARGET=content vite build --mode production && BUILD_TARGET=background vite build --mode production",
    "test": "vitest",
    "test:once": "vitest --run",
    "lint": "eslint . --fix --ext .jsx,.js --ignore-path .gitignore"
  },
  "dependencies": {
    "array-move": "^3.0.1",
    "favico.js": "^0.3.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-sortable-hoc": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest-chrome": "^0.7.2",
    "jsdom": "^28.1.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "sass": "^1.50.0",
    "semver": "^7.3.5",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.2.0",
    "vitest": "^4.0.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{scss,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 2
  }
}
