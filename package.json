{
  "name": "github-sidebar",
  "version": "3.0.2",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianeide/github-sidebar"
  },
  "author": "Christian Gogstad Eide",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack",
    "version": "node ./version.js",
    "build": "NODE_ENV=production webpack -p --config webpack.production.config.js --display-error-details --colors --progress",
    "test": "jest --coverage --config config/jest.config.js --runInBand",
    "test-watch": "jest --watch --config config/jest.config.js --runInBand",
    "lint": "eslint . --fix --ext .jsx,.js --ignore-path .gitignore"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "array-move": "^3.0.1",
    "favico.js": "^0.3.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-sortable-hoc": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.1",
    "@testing-library/user-event": "^13.2.1",
    "babel-jest": "^27.2.4",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^3.21.0",
    "css-loader": "^5.2.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-chrome": "^0.7.2",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^4.13.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "sass-loader": "^8.0.2",
    "semver": "^7.3.5",
    "style-loader": "^1.1.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "targets": "defaults"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-react-jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{scss,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 2
  }
}
